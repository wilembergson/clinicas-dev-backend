generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id        String    @id @db.Uuid()
  cpf       String    @unique
  name      String
  birthdate String
  phone     String
  email     String    @unique
  password  String
  addressId String?   @db.Uuid()
  address   Address?  @relation(fields: [addressId], references: [id])
  consult   Consult[]

  @@map("accounts")
}

model Address {
  id       String    @id @db.Uuid()
  street   String
  number   Int
  district String
  city     String
  uf       String
  accounts Account[]

  @@map("address")
}

model Consult {
  id          String    @id @db.Uuid()
  date        String
  accountId   String    @db.Uuid()
  specialtyId String    @db.Uuid()
  account     Account   @relation(fields: [accountId], references: [id])
  specialty   Specialty @relation(fields: [specialtyId], references: [id])

  @@map("consult")
}

model Specialty {
  id              String            @id @db.Uuid()
  name            String            @unique
  specialtiesDays SpecialtiesDays[]
  consult         Consult[]

  @@map("specialty")
}

model Days {
  id              String            @id @db.Uuid()
  name            String            @unique
  specialtiesDays SpecialtiesDays[]

  @@map("days")
}

model SpecialtiesDays {
  id          String    @id @db.Uuid()
  specialtyId String    @db.Uuid()
  daysId      String    @db.Uuid()
  spetialty   Specialty @relation(fields: [specialtyId], references: [id])
  days        Days      @relation(fields: [daysId], references: [id])

  @@map("specialtiesDays")
}
