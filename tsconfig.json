{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "CommonJS",
    "target": "es2019",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "sourceMap": true,
    "baseUrl": ".",
    "paths": {
      "@domain/*": ["./src/core/domain/*"],
      "@application/*": ["./src/core/application/*"],
      "@infra/*": [
        "./src/core/infra/*"
      ],
      "~/test/*": [
        "./test/*"
      ]
    }
  },
  "ts-node": {
    "esm": true
  },
  "rootDirs": [
    "src",
    "test"
  ]
}